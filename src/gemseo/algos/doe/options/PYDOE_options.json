{
    "name": "PYDOE_options",
    "description": "DOE algorithms from the pyDOE library",
    "id": "https://pythonhosted.org/pyDOE/",
    "properties": {
         "alpha": {
            "type": "string",
            "enum": ["orthogonal", "o", "rotatable", "r"]
        },
        "iterations":{
            "type": "integer",
             "minimum": 1
        },
        "n_samples":{
            "type":  ["null", "integer"],
             "minimum": 1
        },
        "criterion": {
            "type": ["null", "string"],
            "enum": ["center", "c", "maximin", "m", "centermaximin", "cm",
                      "corr", null]
        },
        "face": {
            "type": "string",
            "enum": ["inscribed", "cci", "faced", "ccf"]
        },
        "center_bb": {
            "type": ["null","integer"],
            "minimum": 1
        },
        "center_cc": {
            "type": ["null","array"],
            "items":	{
                		"type": "integer",
                		"maxItems": 2,
                		"minItems": 2
                		}
        },
        "levels": {"anyOf":
        [{
          "type": ["null","array"],
          "minItems": 1,
          "items": {
            "type": "integer",
            "minimum": 1
          }
        },
          {"type": "integer",
            "minimum": 1}
        ]},

         "eval_jac":{
            "type": "boolean"
        },
        "n_processes": {
        	"type" : "integer",
        	"minimum":1
        },
        "wait_time_between_samples": {
        	"type" : "number",
        	"minimum":0
        },
        "seed": {
        	"type" : "integer",
        	"minimum":1
        },
		"max_time":{
            "type": "number",
             "minimum": 0.0
        }
    },
    "$schema": "http://json-schema.org/draft-04/schema",
    "additionalProperties": false,
    "type": "object"
}
