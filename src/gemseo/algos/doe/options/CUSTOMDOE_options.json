{
    "name": "CUSTOM_options",
    "description": "Run a DOE from a file containing samples values",
    "properties": {
         "doe_file": {
            "type": "string"
        },
        "delimiter":{
            "type": "string"
        },
         "comments":{
            "type": "string"
        },
         "skiprows":{
            "type": "integer",
            "minimum":0
        },
         "eval_jac":{
            "type": "boolean"
        },
        "n_processes": {
        	"type" : "integer",
        	"minimum":1
        },
        "wait_time_between_samples": {
        	"type" : "number",
        	"minimum":0
        }
    },
    "required": ["doe_file"],
    "$schema": "http://json-schema.org/draft-04/schema",
    "additionalProperties": false,
    "type": "object"
}
