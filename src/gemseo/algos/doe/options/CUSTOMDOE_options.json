{
    "name": "CUSTOM_options",
    "description": "Run a DOE from samples provided either as an array or as a file",
    "required": ["doe_file", "samples"],
    "properties": {
        "doe_file": {
            "type": ["null", "string"]
        },
        "samples":{
            "type": ["null", "array"],
            "items": {
                "type": "array",
                "items": {
                    "type": "number",
                    "minItems": 1
                },
                "minItems": 1
            }
        },
        "delimiter":{
            "type": "string"
        },
         "comments":{
            "type": "string"
        },
         "skiprows":{
            "type": "integer",
            "minimum":0
        },
         "eval_jac":{
            "type": "boolean"
        },
        "n_processes": {
        	"type" : "integer",
        	"minimum":1
        },
		"max_time":{
            "type": "number",
             "minimum": 0.0
        },
        "wait_time_between_samples": {
        	"type" : "number",
        	"minimum":0
        }
    },
    "$schema": "http://json-schema.org/draft-04/schema",
    "additionalProperties": false,
    "type": "object"
}
