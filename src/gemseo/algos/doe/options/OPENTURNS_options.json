{
    "name": "OPENTURNS_options",
    "description": "DOE algorithms from the OpenTURNS library",
    "id": "http://www.openturns.org/",
    "properties": {
         "distribution_name": {
            "type": "string",
            "enum": ["Arcsine","Beta","Dirichlet","Normal","TruncatedNormal",
					 "Triangular","Trapezoidal","Uniform"]
        },
        "levels":{
            "type": "array",
            "items":	{
                		"type": "number",
                		"minItems": 1
                		}
        },
        "n_samples":{
            "type": "integer",
             "minimum": 1
        },
        "mu":{
            "type": "number"
        },
        "sigma":{
            "type": "number"
        },
         "start":{
            "type": "number"
        },
        "end":{
            "type": "number"
        },
        "centers": {
            "type": "array",
            "items":	{
                		"type": "number",
                		"minItems": 1
                		}
        },
         "eval_jac":{
            "type": "boolean"
        },
        "n_processes": {
        	"type" : "integer",
        	"minimum":1
        },
        "wait_time_between_samples": {
        	"type" : "number",
        	"minimum":0
        }
    },
    "$schema": "http://json-schema.org/draft-04/schema",
    "additionalProperties": false,
    "type": "object"
}
